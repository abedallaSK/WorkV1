<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Half-circle ring background -->
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">

            <shape
                android:shape="ring"
                android:innerRadiusRatio="2.5"
                android:thickness="8dp"
                android:useLevel="false">

                <solid android:color="#61E0E0E0" />
            </shape>
        </rotate>
    </item>
    <!-- Gradient ring -->
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">

            <rotate
                android:fromDegrees="270"
                android:toDegrees="270">

                <shape
                    android:innerRadiusRatio="2.5"
                    android:shape="ring"
                    android:thickness="10dp"
                    android:useLevel="true"
                    android:elevation="30dp">

                    <gradient
                        android:startColor="#C837BB"
                        android:centerColor="#E5BD73"
                        android:endColor="#C837BB"
                        android:angle="12"
                        android:type="sweep"
                        android:useLevel="false"
                        android:centerX="0.5"
                        android:centerY="0.5" />
                </shape>
            </rotate>
        </rotate>
    </item>
</layer-list>
